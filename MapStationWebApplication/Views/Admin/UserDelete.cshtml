@model StationShowApplication.Models.User

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Template/AdminTemplate.cshtml";
}


<h3>
    Kullanıcıyı silmek istediğinize emin misiniz?
</h3>
<div style="text-align:center">
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Rolü
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Role.roleName)
        </dd>

        <dt>
            Adı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            Soyadı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.surname)
        </dd>

        <dt>
            Kullanıcı Adı
        </dt>

        <dd>
            @Html.DisplayFor(model => model.userName)
        </dd>

        <dt>
            Şifre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.userPassword)
        </dd>

        <dt>
            Oluşturma Tarihi
        </dt>

        <dd>
            @Html.DisplayFor(model => model.userCreateDate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> |
            @Html.ActionLink("Listeyi Göster", "UserList")
        </div>
    }
</div>
