@model StationShowApplication.Models.User

@{
    ViewBag.Title = "Admin Login";
}
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=10; IE=9; IE=8; IE=7; IE=EDGE">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=1200, user-scalable=no">
    <link rel="shortcut icon" href="~/Content/img/favicon.ico">
    <link href="~/Content/Admin/login.css" rel="stylesheet" />
</head>
<body>
    <img id="backImg" src="~/Content/Admin/img/loginback.jpg" />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        if (@ViewData["Message"] != null)
        {
            <div id="warningWindow" class="dlgVP mbox" style="z-index: 20000; left: 533px; top: 260px; display: block;" tabindex="-1">
                <table class="dlgTB" cellpadding="0" border="0" cellspacing="0" style="box-shadow: rgb(70, 70, 70) 2px 2px 20px;">
                    <tbody>
                        <tr>
                            <td class="dlgID dlgCenter" style="width: 288px; height: 6px; background-image: url(../../Content/Admin/img/window/4.png)">

                                <table class="mboxTable" cellpadding="0" border="0" cellspacing="0">
                                    <tbody>
                                        <tr>
                                            <td class="mboxC1">
                                                <img class="mboxImg" src="~/Content/Admin/img/window/0.png">
                                            </td>
                                            <td class="mboxC2"><span class="mboxMsg">@ViewData["Message"]</span></td>
                                            <td class="mboxC3">
                                                <div class="mboxDiv" style="background: rgb(48, 48, 48); cursor: pointer; height: 88px;">
                                                    <span class="mboxSpan"></span><img class="mboxIcon" id="close" src="~/Content/Admin/img/window/ok.png" width="26" height="26">
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
        <div class="panel-container">
            <div id="panel" class="panel">
                <div class="panel-logo" id="panel-logo" style="background: rgb(229, 72, 0);"></div>
                @Html.TextBoxFor(m => m.userName, new { placeholder = "Kullanıcı adı", @maxlength = "20", @class = "inp inpUser login-el", autoComplete = "off" })
                @Html.ValidationMessageFor(a => a.userName)

                @Html.TextBoxFor(m => m.userPassword, new { placeholder = "Şifre", @type = "password", @maxlength = "20", @class = "inp inpPass login-el", autoComplete = "off" })
                @Html.ValidationMessageFor(a => a.userPassword)
                <button id="loginBtn" class="login-submit">Giriş</button>
            </div>
        </div>
    }
    <div class="login-footer" id="login-footer">© 2009 - @DateTime.Now.Year Harita İstasyon</div>
</body>
</html>
<script>
    var close = document.getElementById("close");
    close.onclick = function () {
        document.getElementById("warningWindow").style.display = "none";
    }
</script>



