@model IEnumerable<StationShowApplication.Models.StationType>

@{
    ViewBag.Title = "Nokta Türü";
    Layout = "~/Views/Template/AdminTemplate.cshtml";
}




<div class="x_panel">
    <div class="x_title">
        <h2>Nokta Türü Listesi</h2>
        <a href="~/Admin/PointTypeCreate" style="float:right">Nokta Türü Ekle</a>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>

        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="row">
            <div class="col-sm-12">
                <div class="card-box table-responsive">

                    <table id="datatable-keytable" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Nokta Türü</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>


                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.stationTypeName)
                                    </td>
                                   
                                    <td>
                                        @Html.ActionLink("Düzenle", "PointTypeEdit", new { id = item.stationTypeId }) |
                                        @Html.ActionLink("Sil", "PointTypeDelete", new { id = item.stationTypeId })
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
